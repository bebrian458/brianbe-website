{
  "name": "brianbe-website",
  "version": "1.0.0",
  "description": "Personal Website",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
    "check-pretty": "prettier --list-different 'app/**/*.js'",
    "pretty": "prettier --write 'app/**/*.js'",
    "check-lint": "eslint '*.js'",
    "lint": "eslint --fix '*.js'"
  },
  "engines": {
    "node": "10.8.0"
  },
  "dependencies": {
    "ejs": "^2.6.1",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "eslint": "^5.11.1",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": [
        "npm run check-pretty",
        "npm run check-lint"
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
